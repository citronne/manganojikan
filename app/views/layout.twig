<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>library1</title>
    <link rel="stylesheet" type="text/css" href="/vendor/font-awesome/css/font-awesome.css" media="screen"/>
    <link rel="stylesheet" type="text/css" href="/vendor/normalize/normalize-7.0.0.css" media="screen"/>
    <link rel="stylesheet" type="text/css" href="/styles/common.css" media="screen"/>
    <link rel="shortcut icon" type="image/x-icon" href="favicon.png" />

    <link rel="manifest" href="manifest.json">
    {% block styles %}{% endblock %}

</head>
<body>
<nav>
    <div class="menu">
        <div class="home-btn library-icon"><a href="{{ path_for('homepage')}}"><i class="fa fa-home" aria-hidden="true"></i></a></div>
        <div class="user-icon library-icon">
            {% if session.user_name %}
                <a href="{{ path_for('profile')}}"><i class="fa fa-user" aria-hidden="true"></i></a>
            {% else %}
                <a href="{{ path_for('register')}}"><i class="fa fa-user-plus" aria-hidden="true"></i></a>
                <a href="{{ path_for('login')}}"><i class="fa fa-user" aria-hidden="true"></i></a>
            {% endif %}
        </div>
        {% block customMenu %}{% endblock %}
        <div class="menu-search">
                <span class="search-box">
                    <input type="search" id="search" placeholder="Search..." />
                    <i class="fa fa-search" aria-hidden="true"></i>
                </span>
        </div>
        <div class="setting-icon"><a href="{{ path_for('setting')}}"><i class="fa fa-cog" aria-hidden="true"></i></a></div>
    </div>
</nav>

{% block content %}{% endblock %}

