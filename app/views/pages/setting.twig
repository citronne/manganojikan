{% extends "layout.twig" %}

{% block styles %}
    <link rel="stylesheet" type="text/css" href="/styles/setting.css" media="screen"/>
{% endblock %}

{% block content %}
    <div class="setting">
        <ul>
            {% if not library %}
                <li>Créer la bibliothèque</li>
                <li>Inserez le nom de dossier
                    <form action="{{ path_for('setting') }}" method="post">
                        <i class="fa fa-folder-open" aria-hidden="true"></i>
                        <input type="text" id="directory" name="directory"/>
                        <button>Valider</button>
                    </form>
                </li>
            {% endif %}
            {% if library %}
            <li>Rafraichir la bibliothèque
                <a href="{{ path_for('scan') }}"><i class="fa fa-refresh" aria-hidden="true"></i></a>
            </li>
            {% endif %}
        </ul>
    </div>
{% endblock %}

{% block scripts %}
    <script type="text/javascript" src='/vendor/jquery/jquery-3.2.1.min.js'></script>
    <script type="text/javascript" src='/scripts/setting.js'></script>
{% endblock %}