{% extends "layout.twig" %}

{% block styles %}
    <link rel="stylesheet" type="text/css" href="/styles/user.css" media="screen"/>
{% endblock %}

{% block content %}
    <div class="error">
        <ul>
            {% for message in error %} <li>{{ message }}</li> {% endfor %}
        </ul>
    </div>
    <div class="msg">{{ msg }}</div>
    <div class="form-box">
        <div class="user">
            <p>Changez le mot de passe</p>
            <form action="{{ path_for('change') }}" method="post">
                <label for="oldpassword">Mot de passe</label><br/>
                <input type="password" class="input-box" id="oldpassword" name="oldpassword"/><br/>
                <label for="password">Nouveau mot de passe</label><br/>
                <input type="password" class="input-box" id="newpassword" name="newpassword"/><br/>
                <label for="password">Nouveau mot de passe(confirmer)</label><br/>
                <input type="password" class="input-box" id="newpassword2" name="newpassword2"/><br/>
                <button class="input-box">changer</button>
            </form>
        </div>
    </div>

{% endblock %}