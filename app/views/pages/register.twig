{% extends "layout.twig" %}

{% block styles %}
    <link rel="stylesheet" type="text/css" href="/styles/user.css" media="screen"/>
    <link rel="stylesheet" type="text/css" href="/styles/register.css" media="screen"/>
{% endblock %}

{% block content %}
